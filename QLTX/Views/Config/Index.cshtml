@model QLTX.Models.Config
@{
	ViewData["Title"] = "Thông tin chung";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
	<div class="container-fluid px-4">
		<h2 class="mt-4">@ViewData["Title"]</h2>
		<hr />
		<div class="row">
			<div class="col-md-4">
				<form asp-action="Index" method="post">
					<div class="form-group mb-2">
						<label asp-for="Name" class="control-label mb-2">Tên cửa hàng</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="Description" class="control-label mb-2">Mô tả</label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PhoneNumber" class="control-label mb-2">Số điện thoại</label>
						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="Email" class="control-label mb-2">Email</label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="Address" class="control-label mb-2">Địa chỉ</label>
						<input asp-for="Address" class="form-control" />
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PriceHour" class="control-label mb-2">Giá theo giờ</label>
						<input asp-for="PriceHour" class="form-control" />
						<span asp-validation-for="PriceHour" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PriceDay" class="control-label mb-2">Giá theo ngày</label>
						<input asp-for="PriceDay" class="form-control" />
						<span asp-validation-for="PriceDay" class="text-danger"></span>
					</div>

					<div class="form-group mb-2">
						<label asp-for="PriceWeek" class="control-label mb-2">Giá theo tuần</label>
						<input asp-for="PriceWeek" class="form-control" />
						<span asp-validation-for="PriceWeek" class="text-danger"></span>
					</div>
					 
					<button type="submit" class="btn btn-primary mt-3">Lưu</button>
				</form>
			</div>
		</div>


	</div>
</main>
