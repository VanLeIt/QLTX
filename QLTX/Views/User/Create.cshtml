@model QLTX.ViewModels.CreateUserViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<main>
	<div class="container-fluid px-4">
		<h2 class="mt-4">Thêm mới</h2>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">Người dùng</li>
		</ol>

		<hr />
		<div class="row">
			<div class="col-md-4">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div> 
					<div class="mb-2">

						<label asp-for="FullName" class="control-label mb-2">Tên đầy đủ</label>
						<input asp-for="FullName" class="form-control" />
						<span asp-validation-for="FullName" class="text-danger"></span>
					</div>
					<div class="mb-2">

						<label asp-for="Email" class="control-label mb-2">Email</label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="mb-2">

						<label asp-for="PhoneNumber" class="control-label mb-2">Số điện thoại</label>
						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
					<div class="mb-2">

						<label asp-for="Address" class="control-label mb-2">Quê quán</label>
						<input asp-for="Address" class="form-control" />
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>
					<div class="mb-2">

						<label asp-for="Password" class="control-label">Mật khẩu</label>
						<input asp-for="Password" class="form-control" type="password" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="mb-2">
						<label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
						<input asp-for="ConfirmPassword" class="form-control" type="password" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					@* <div class="mb-3">
						<label asp-for="RoleIds" class="control-label">Vai trò</label>
						@foreach (var role in (SelectList)ViewData["RoleIds"])
						{
							<div class="form-check">
								<input type="checkbox" class="form-check-input" name="RoleIds" value="@role.Value" />
								<label class="form-check-label">@role.Text</label>
							</div>
						}
						<span asp-validation-for="RoleIds" class="text-danger"></span>
					</div>*@

					<div class="form-group d-flex justify-content-between align-items-center mt-2">
						<a asp-action="Index" class="btn btn-secondary">Đóng</a>
						<button type="submit" class="btn btn-primary">
							<i class="fas fa-save"></i> Lưu
						</button>

					</div>
				</form>
			</div>
		</div>


	</div>
</main>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
