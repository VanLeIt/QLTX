@model QLTX.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h2 class="mt-4">Chi tiết</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Khách hàng</li>
        </ol>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Họ và tên</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">Loại giấy tờ</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.TypeDocument)</dd>
            <dt class="col-sm-2">Số giấy tờ</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdDocument)</dd>
            <dt class="col-sm-2">Số điện thoại</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
            <dt class="col-sm-2">Địa chỉ</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
            <dt class="col-sm-2">Người tạo</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy)</dd>
            <dt class="col-sm-2">Thời gian tạo</dt>
            <dd class="col-sm-10">@Model.CreationTime.ToString("dd/MM/yyyy HH:mm")</dd>
            @if (!string.IsNullOrEmpty(Model.UpdatedBy))
            {
                <dt class="col-sm-2">Người sửa cuối</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.UpdatedBy)</dd>
                <dt class="col-sm-2">Thời gian sửa</dt>
                <dd class="col-sm-10">@Model.UpdationTime?.ToString("dd/MM/yyyy HH:mm")</dd>
            }
        </dl>
        <div class="row">
            <div class="col-sm-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Cập nhật</a>
            </div>
            <div class="col-sm-10">
                <a asp-action="Index" class="btn btn-secondary">Đóng</a>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
