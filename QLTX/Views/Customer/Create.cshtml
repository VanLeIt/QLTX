@model QLTX.Models.Customer

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<main>
	<div class="container-fluid px-4">
		<h2 class="mt-4">Thêm mới</h2>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">Khách hàng</li>
		</ol>

		<hr />
		<div class="row">
			<div class="col-md-4">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="mb-3">
						<label asp-for="Name" class="control-label">Họ tên khách hàng</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="TypeDocument" class="control-label mb-2">Loại giấy tờ</label>
						<select asp-for="TypeDocument" class="form-control" asp-items="@ViewBag.StatusList">
						</select>
						<span asp-validation-for="TypeDocument" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="IdDocument" class="control-label mb-2">Số giấy tờ tùy thân</label>
						<input asp-for="IdDocument" class="form-control" />
						<span asp-validation-for="IdDocument" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Email" class="control-label mb-2">Email</label>

						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="PhoneNumber" class="control-label mb-2">Số điện thoại</label>

						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Address" class="control-label mb-2">Địa chỉ</label>
						<input asp-for="Address" class="form-control" />
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>


					<div class="form-group d-flex justify-content-between align-items-center">
						<a asp-action="Index" class="btn btn-secondary">Đóng</a>
						<button type="submit" class="btn btn-primary">
							<i class="fas fa-save"></i> Lưu
						</button>

					</div>
				</form>
			</div>
		</div>


	</div>
</main>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


