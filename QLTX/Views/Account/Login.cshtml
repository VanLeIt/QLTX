@using QLTX.ViewModels;
@model LoginVM
@{
    TempData["Title"] = "Login";
    Layout = "";
}
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>Login - SB Admin</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-pink">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">E-Motorbike</h3></div>
                                <div class="card-body">
                                    <form asp-action="Login" method="post">
                                        <div asp-validation-summary="ModelOnly"></div>
										<div class="mb-2">
                                            <label for="Username" class="control-label">Tên đăng nhập</label>
                                            <input class="form-control" asp-for="Username" />

                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
										<div class=" mb-2">
                                            <label for="Password" class="control-label">Mật khẩu</label>
                                            <input class="form-control" asp-for="Password" />
											
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" asp-for="RememberMe" />
                                            <label class="form-check-label" asp-for="RememberMe">Nhớ mật khẩu</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            @* <a class="small text-decoration-none" asp-action="Register">Đăng ký</a> *@

                                            <input type="submit" value="Đăng nhập" asp-action="Login" asp-controller="Account" class="btn btn-primary" />

                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>

</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}